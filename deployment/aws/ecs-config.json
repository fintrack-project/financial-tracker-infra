{
  "version": "1.0",
  "services": {
    "backend": {
      "image": "financial-tracker-backend:latest",
      "cpu": "256",
      "memory": "512",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": "SPRING_DATASOURCE_URL",
          "value": "jdbc:postgresql://financial-tracker-db:5432/financial_tracker"
        },
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "value": "admin"
        },
        {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "value": "admin"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/financial-tracker",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "backend"
        }
      }
    },
    "frontend": {
      "image": "financial-tracker-frontend:latest",
      "cpu": "256",
      "memory": "512",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/financial-tracker",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "frontend"
        }
      }
    },
    "database": {
      "image": "postgres:latest",
      "cpu": "256",
      "memory": "512",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5432,
          "hostPort": 5432
        }
      ],
      "environment": [
        {
          "name": "POSTGRES_DB",
          "value": "fintrack"
        },
        {
          "name": "POSTGRES_USER",
          "value": "admin"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "admin"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/financial-tracker",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "database"
        }
      }
    }
  },
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "family": "fintrack"
}